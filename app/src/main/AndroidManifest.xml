<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quarks0.dofusorganizer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayCharacters"
            android:label="@string/title_activity_display_characters"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".harvestTracker"
            android:label="@string/title_activity_harvest_tracker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CharacterSearch"
            android:label="@string/title_activity_character_search"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
